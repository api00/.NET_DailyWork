
@{
    ViewBag.Title = "show";
}

<h2>show</h2>


<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
  
        <h2>HTML Table</h2>

        <table>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>DOB</th>
            </tr>
            @foreach (var p in Model)
            {
        <tr>
            <td>@p.id</td>
            <td>@p.Name</td>
            <td>@p.Dob</td>
            <td><a href="/Student/ShowEdit/@p.id">edit</a></td>
            <td><a href="/Student/delete/@p.id">delete</a></td>

        </tr>
            }

        </table>
 
</body>
</html>

